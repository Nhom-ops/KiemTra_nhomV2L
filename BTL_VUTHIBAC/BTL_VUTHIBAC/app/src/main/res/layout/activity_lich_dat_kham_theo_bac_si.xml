<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_marginBottom="1dp">

    <LinearLayout
        android:id="@+id/bo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="#03A8FF"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:background="#F6F3EF"
        android:padding="1dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_height="60dp">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:id="@+id/back"
                android:src="@drawable/muiten"
                android:layout_width="50dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="9"
                android:fontFamily="sans-serif-condensed-light"
                android:paddingTop="20dp"

                android:paddingBottom="30dp"
                android:text="LỊCH KHÁCH HÀNG ĐẶT"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    <ListView
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:id="@+id/listtk"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent"></ListView>



    <!-- Toolbar ở cuối màn hình -->
    <LinearLayout
        android:id="@+id/bottomToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#F6F3EF"
        android:padding="1dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="10dp">

            <ImageButton
                android:id="@+id/btntrangchu"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="#F6F3EF"
                android:src="@drawable/admin5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:gravity="center"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="10dp">

            <ImageButton
                android:id="@+id/btntinnhan"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="#F6F3EF"
                android:src="@drawable/tinnhan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tin nhắn"
                android:gravity="center"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="10dp">

            <ImageButton
                android:id="@+id/btnlichdat"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="#F6F3EF"
                android:src="@drawable/admin3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lịch đặt"
                android:gravity="center"
                android:textColor="#000000" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btncanhan"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="#F6F3EF"
                android:src="@drawable/admin4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cá nhân"
                android:gravity="center"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
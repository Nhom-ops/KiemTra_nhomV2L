<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gridview"
    android:layout_marginBottom="1dp"
    android:gravity="center"> <!-- Căn giữa toàn bộ nội dung -->

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="8dp"
        android:layout_gravity="center"> <!-- Căn giữa CardView -->

        <ImageView
            android:id="@+id/imgbs"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher" /> <!-- Thay your_image bằng ảnh của bạn -->

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"> <!-- Căn giữa LinearLayout -->

        <TextView
            android:id="@+id/ht1"
            android:text="Họ tên"
            android:textColor="#0021F6"
            android:textSize="8sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/cn1"
            android:text="Chuyên ngành"
            android:textColor="#0021F6"
            android:textSize="8sp"

            android:layout_marginBottom="3dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <TextView
        android:id="@+id/mbs1"
        android:textSize="1sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ns1"
        android:textSize="1sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/gt1"
android:textSize="1sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tdn1"
        android:textSize="1sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sdt1"
        android:textSize="1sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
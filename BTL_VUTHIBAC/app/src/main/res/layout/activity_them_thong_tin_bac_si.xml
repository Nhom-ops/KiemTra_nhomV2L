<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:padding="16dp"
    android:background="#35C6FF"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/imgback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:src="@drawable/back"

        android:padding="10dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm Thông Tin Bác Sĩ"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                android:textColor="#001BC5"
                android:layout_marginBottom="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/mabs"
                android:background="@drawable/edittext"
                android:drawableLeft="@drawable/mam"
                android:drawablePadding="8dp"
                android:hint="Mã bác sĩ"
                android:textColorHint="#aaa"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="0dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/tenbs"
                android:background="@drawable/edittext"
                android:drawableLeft="@drawable/ht"
                android:drawablePadding="8dp"
                android:hint="Họ và Tên"
                android:padding="8dp"
                android:textColorHint="#aaa"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="3dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Giới Tính:"
                    android:textSize="17sp"
                    android:layout_marginBottom="5dp" />
              <RadioGroup
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/nu"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="5dp"
                    android:text="Nữ"
                    android:checked="true"
android:buttonTint="#8E8E8E"
                    android:textColor="#000000"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" />
                <RadioButton
                    android:id="@+id/nam"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="5dp"
android:text="Nam"
                    android:buttonTint="#8E8E8E"
                    android:textColor="#000000"

                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" />
              </RadioGroup>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/ns1"
                android:focusableInTouchMode="false"
                android:background="@drawable/edittext"
                android:drawableLeft="@drawable/lich"
                android:drawablePadding="8dp"
                android:hint="yyyy-MM-dd"
                android:textColorHint="#aaa"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="0dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/chuyennganh"
                android:focusableInTouchMode="false"
                android:background="@drawable/edittext"
                android:drawableLeft="@drawable/chuyennganh"
                android:drawablePadding="8dp"
                android:hint="Chuyên ngành"
                android:padding="8dp"
                android:textColorHint="#aaa"

                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/sdt1"
                android:background="@drawable/edittext"
                android:drawableLeft="@drawable/chuyennganh"
                android:drawablePadding="8dp"
                android:hint="Số điện thoại"
                android:padding="8dp"
                android:textColorHint="#aaa"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/tdn1"
                android:background="@drawable/edittext"
                android:drawableLeft="@drawable/tdn2"
                android:drawablePadding="8dp"
                android:hint="Tên đăng nhập"
                android:textColorHint="#aaa"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imgbs"
        android:background="@drawable/edittext"

        android:drawablePadding="8dp"

        android:padding="8dp"

        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHighlight="@color/cardview_dark_background"
        android:layout_marginTop="5dp"/>
<Button
    android:layout_width="100dp"
   android:layout_marginTop="10dp"
    android:text="Chọn ảnh"
    android:backgroundTint="#D12A2A"
    android:layout_marginLeft="30dp"
    android:id="@+id/btnAddImg"
    android:layout_height="50dp"></Button>
</LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/btnadd"
                android:text="Thêm"
                android:textSize="18sp"
                android:layout_marginTop="1dp"
                android:backgroundTint="#00B6FF"
                app:cornerRadius = "20dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>